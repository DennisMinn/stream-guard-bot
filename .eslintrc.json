{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 2],
		"quotes": ["error", "single"],
		"no-trailing-spaces": "error",
        "semi": ["error", "always"],
        "@typescript-eslint/semi": "off"
    }
}
